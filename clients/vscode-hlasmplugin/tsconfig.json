{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "lib": [
      "es2016",
      "WebWorker"
    ],
    "outDir": "lib",
    "rootDir": "src",
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true
  },
  "exclude": [
    "src/**/*.web.ts",
    "lib/**"
  ]
}
